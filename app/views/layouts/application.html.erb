<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if user_signed_in? %>
      <div class="buttons">
      <button class="button"><big><b><%= link_to "HOME", welcome_index_path %></b></big></button>
      <% if current_user.email=='doctor@gmail.com' %>
        <button class="button"><big><b><%= link_to "PATIENTS", patients_path %></b></big></button>
      <% end %>
      <button class="button"><big><b><%= link_to("LOGOUT", destroy_user_session_path, :method => :delete) %></b></big></button>
      </div>
    <% end %>
    <hr />
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
