<h1>NEW PATIENT</h1>

<%= form_with scope: :patient, url: patients_path, local: true do |form| %>
 
   
<p>
    <%= form.label :Name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :Age %><br>
    <%= form.text_field :age %>
  </p>
<p>
    <%= form.label :Gender %><br>
    <%= form.text_field :gender %>
  </p>
 <p>
    <%= form.label :Height %><br>
    <%= form.text_field :height %>
  </p>
 <p>
    <%= form.label :Weight %><br>
    <%= form.text_field :weight %>
  </p>
 <p>
    <%= form.label :Bloodgroup %><br>
    <%= form.text_field :bloodgroup %>
  </p>

 
  <p>
    <%= form.submit %>
  </p>
<% end %>
<button class="button"><big><b><%= link_to 'Back', welcome_index_path %></b></big></button>