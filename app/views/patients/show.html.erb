<table border="2">

<% i=0 %>
<% File.open("/home/pi/Desktop/DATABASE/PARAMETERS EXTRACTED/#{@patient.name}.txt").each_line do |line| %>
<% break if i==28%>
<% i=i+1 %>

<% if i==1 %>
<tr>
<th><big><%= line %></big></th>

<% else %>
<% if i==2 %>
<th><big><%= line %></big></th>

<% else %>
<% if i==3 %>
<th><big><%= line %></big></th>

<% else %>
<% if i==4 %>
<th><big><%= line %></big></th>
</tr>

<% else %>
<% if i%4==1 %>
<tr>
<td><%= line %></td>

<% else %>
<% if i%4==2 %>
<td><%= line %></td>

<% else %>
<% if i%4==3 %>
<td><%= line %></td>

<% else %>
<td><%= line %></td>
</tr>

<% end %>
<% end %>
<% end %>
<% end %>
<% end %>
<% end %>
<% end %>
<% end %>
</table>
